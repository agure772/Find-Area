# This function multiplies two numbers
def multiply(x, y):
    return x * y




print("Enter number to find area of a square or for a rectangle")
print("1. Square")
print("2. Rectangle")



while True:
    # Take input from the user
    choice = input("Select area to be found for a Square(1) or rectangle(2): ")
  

    # Check if choice is one of the two options 1 or 2.
    if choice in ('1'):
        num1 = float(input("Enter first number: "))
        num2 = float(num1)

        if choice == '1':
            print("Area of the square is: ", multiply(num1, num1))

        break

    

    if choice in ('2'):
        num1 = float(input("Enter first number: "))
        num2 = float(input("Enter first number: "))

        if choice == '2':
            print("Area of the rectangle is: ",  multiply(num1, num2))

        break


    else:
        print("Invalid! Please select options 1 or 2")
